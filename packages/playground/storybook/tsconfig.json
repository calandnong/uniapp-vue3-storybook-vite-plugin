{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "paths": {
      "@/": ["stories"]
    },
    "types": [
      "@types/node",
      "@dcloudio/types"
    ]
  },
  "include": [
    "./stories/**/*"
  ]
}